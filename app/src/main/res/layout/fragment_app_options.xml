<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="store"
            type="is.posctrl.posctrl_android.data.model.StoreResponse" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cl_base"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/margin_small"
            android:text="@string/title_app_options"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_logout"
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/margin_small"
            android:text="@string/action_logout"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <!--todo settings screen with settings for udp connection-->
        <TextView
            android:id="@+id/tv_settings"
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/margin_small"
            android:text="@string/action_settings"
            app:layout_constraintTop_toBottomOf="@id/tv_logout" />


        <!--todo persistence-->
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sw_sound"
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_small"
            android:text="@string/title_notification_sound"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tv_settings"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_suspend"
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/margin_small"
            android:text="@string/action_suspend_register"
            android:visibility="@{store==null?View.GONE:View.VISIBLE}"
            app:layout_constraintTop_toBottomOf="@+id/sw_sound" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
